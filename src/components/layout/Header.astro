---
import Language from "@components/shared/desktop/Language.astro";
import Logo from "@components/shared/desktop/Logo.astro";
import Menu from "@components/shared/desktop/Menu.astro";
import Theme from "@components/shared/Theme.astro";

import MenuMobile from "@components/shared/mobile/MenuMobile.astro";
---

<header
  class="flex fixed inset-x-0 top-0 z-10 border-b border-slate-400 dark:border-white/10 items-center justify-evenly lg:justify-between xl:justify-evenly md:gap-0 py-2 bg-linear-to-r/srgb  lg:py-0 lg:px-4 xl:px-4 w-full lg:w-99/100"
>
  <Logo
    className="h-20 w-40 md:h-20 md:w-50 lg:w-25 lg:h-30 xl:h-20 xl:w-50 relative overflow-hidden"
  />
  <Menu />
  <div class="hidden lg:flex items-center lg:gap-2 xl:gap-4">
    <theme-dial>
      <Theme />
    </theme-dial>
    <Language />
  </div>
  <MenuMobile />
</header>

<style>
  header {
    backdrop-filter: blur(10px);
  }
</style>


