---
import { Icon } from "astro-icon/components";

const technologies = [
  {
    tech: [
      {
        name: "HTML",
        icon: "html",
      },
      {
        name: "CSS",
        icon: "css",
      },
      {
        name: "SASS",
        icon: "sass",
      },
      {
        name: "Tailwind CSS",
        icon: "tailwind-css",
      },
    ],
  },
  {
    tech: [
      {
        name: "Astro",
        icon: "astro",
      },
      {
        name: "JavaScript",
        icon: "javascript",
      },

      {
        name: "TypeScript",
        icon: "typescript",
      },

      {
        name: "React",
        icon: "react",
      },
    ],
  },
  {
    tech: [
      {
        name: "Nextjs",
        icon: "nextjs",
      },
      {
        name: "Vue-js",
        icon: "vue",
      },
      {
        name: "Node-js",
        icon: "node-js",
      },
      {
        name: "Express.js",
        icon: "express",
      },
    ],
  },
  {
    tech: [
      {
        name: "PHP",
        icon: "php",
      },

      {
        name: "Laravel",
        icon: "laravel",
      },
      {
        name: "Linux",
        icon: "linux",
      },
      {
        name: "Docker",
        icon: "docker",
      },
    ],
  },
  {
    tech: [
      {
        name: "AWS",
        icon: "aws",
      },
    ],
  },
];
---

<div class="container mx-auto lg:w-1/3 mt-8">
  <a
    class="mt-3 text-xs text-primary hover:underline block text-end"
    target="_blank"
    href="https://iconos8.es/icons">Icons from: iconos8</a
  >
  <div class="grid grid-cols-2 gap-3 p-1 rounded-lg">
    {
      technologies.map((data) => (
        <ul class="grid grid-cols-2 gap-1 backdrop-blur-[2px]">
          {data.tech.map(({ icon, name }) => (
            <li class="flex flex-col items-center group relative p-2 border border-gray-500 cursor-pointer rounded-md bg-white dark:bg-slate-800 shadow-2xl">
              <Icon
                name={icon}
                size={40}
                aria-label={name}
                class="group-hover:scale-125 transition-all"
              />
              <span class="absolute top-0 left-1 mt-1 hidden group-hover:block bg-gray-800 text-white text-xs px-2 py-1 rounded transition-all">
                {name}
              </span>
              <span class="dark:text-white text-[8px] text-center block md:text-lg">
                {name}
              </span>
            </li>
          ))}
        </ul>
      ))
    }
  </div>
</div>
