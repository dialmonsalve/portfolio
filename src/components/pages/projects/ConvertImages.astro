---
import Layout from "@layouts/Layout.astro";

import { getI18N } from "@i18n/index";
import DownloadImages from "@components/DownloadImages.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<Layout>
  <section class="flex flex-col gap-15 w-80/100 mx-auto items-center pt-10">
    <h1
      transition:name="convert-images"
      class="text-gray-800 dark:text-white text-center"
    >
      {i18n.projects.internal_projects[1].title}
    </h1>
    <h2 class="text-primary" >{i18n.projects.subtitle}</h2>
    <DownloadImages />
  </section>
</Layout>
